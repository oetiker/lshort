\NewDocumentCommand{\env}{smo} {
  \IfValueTF {#3} {
    \__lshort_arglist:n {#3}
  } {
    \tl_clear:N \l__lshort_arglist_result
  }
  \IfBooleanTF{#1} {
    \use:x {
      \exp_not:N \mintinline{latex}
      :
      \bs begin{#2}
      \l__lshort_arglist_result
      :
    }
  } {
    \texttt{#2}
  }
}

\NewDocumentCommand{\ei}{smo} {
  \IfValueTF {#3} {
    \__lshort_arglist:n {#3}
  } {
    \tl_clear:N \l__lshort_arglist_result
  }

  \IfBooleanTF {#1} { \env* } { \env }{#2}[#3]
  \eih{#2}
}
